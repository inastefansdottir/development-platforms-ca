{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext", // Keep ES Modules
    "moduleResolution": "Node",
    "esModuleInterop": true, // allows `import express from "express"`
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["src"]
}
